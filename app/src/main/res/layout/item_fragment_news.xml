<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/colorbackgroundCV">
    <LinearLayout
        android:id="@+id/item_fn_ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:id="@+id/item_fn_ll_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_fn_username_image"
                    android:tag="image_tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_news_32dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_fn_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start|top"
                        android:layout_marginTop="2dp"

                        android:text="@string/user_name" />

                    <TextView
                        android:id="@+id/item_fn_post_slug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="5dp"
                        android:text="@string/post_slug"
                        android:textColor="@color/colorGray"/>

                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/item_fn_ll_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_fn_post_image"
                    android:tag="image_post_tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_news_32dp"/>
                <LinearLayout
                    android:id="@+id/item_fn_ll_post_information"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_fn_post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start|top"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/title" />

                    <TextView
                        android:id="@+id/item_fn_post_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:textColor="@color/colorGray"
                        android:layout_marginTop="5dp"
                        android:text="@string/description" />
                    <LinearLayout
                        android:id="@+id/item_fn_ll_post_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp">
                        <TextView
                            android:id="@+id/item_fn_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_like_24dp"
                            android:text="2"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/item_fn_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_comment_24dp"
                            android:text="3"

                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/item_fn_time_published"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-07-10T04:07:11Z"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>